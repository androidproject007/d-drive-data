<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/click_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="@dimen/_5sdp"
        app:cardBackgroundColor="@color/light_two_blue"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/student_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hiral"
                android:textStyle="bold"
                android:textSize="@dimen/_18sdp"
                android:fontFamily="@font/hotpizza"
                android:textColor="@color/blue_color">
            </TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/orange"></View>

            <TextView
                android:id="@+id/std"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10th"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/fontcolor">
            </TextView>

            <TextView
                android:id="@+id/mobile"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="91938652147"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/fontcolor">
            </TextView>

            <TextView
                android:id="@+id/address"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="103,Ratnmani Complex, Ashram Road, Ahmedabad"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/fontcolor">
            </TextView>


<!--            <TextView-->
<!--                android:id="@+id/"-->
<!--                android:layout_marginTop="@dimen/_10sdp"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="91938652147"-->
<!--                android:textStyle="bold"-->
<!--                android:textSize="@dimen/_14sdp"-->
<!--                android:fontFamily="@font/roboto_bold"-->
<!--                android:textColor="@color/fontcolor">-->
<!--            </TextView>-->

   <RelativeLayout
    android:layout_margin="@dimen/_5sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
       <Button
           android:layout_alignParentLeft="true"
           android:id="@+id/pickup"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Drop"
           android:textSize="@dimen/_12sdp"
           android:textColor="@color/white"
           android:layout_gravity="end|right"
           android:background="@drawable/button_date_gradient"/>

            <Button
                android:layout_alignParentRight="true"
                android:id="@+id/absent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Absent"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:layout_gravity="end|right"
                android:background="@drawable/button_date_gradient"/>

            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
