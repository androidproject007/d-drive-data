<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:orientation="vertical">

    <LinearLayout
      android:id="@+id/click_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

     <LinearLayout
       android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:orientation="vertical">

     <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
     <TextView
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Name"
        android:id="@+id/subject_name"
        android:textColor="@color/black_color"
        android:textStyle="bold"
        android:textSize="@dimen/_16sdp"
        android:fontFamily="@font/hotpizza"
       />

   </RelativeLayout>
<!--      <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="@dimen/_1sdp"-->
<!--            android:background="@color/red_new">-->
<!--     </View>-->
     <TextView
        android:id="@+id/topic_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="25 Marks"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        android:textColor="@color/fontcolor"
        android:padding="@dimen/_5sdp">
    </TextView>

     <TextView
         android:id="@+id/text_exam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pass an exam"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        android:textColor="@color/green_color"
        android:padding="@dimen/_5sdp">
     </TextView>

  </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fontcolor"
        android:padding="@dimen/_5sdp">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/2/2021"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="@dimen/_5sdp">
        </TextView>
        <TextView
           android:layout_alignParentRight="true"
            android:id="@+id/percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80%"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="@dimen/_5sdp">
        </TextView>
    </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
